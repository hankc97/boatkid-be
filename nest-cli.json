{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true
  },
  "entryFile": "main",
  "projects": {
    "main": {
      "type": "application",
      "root": "src",
      "entryFile": "main",
      "sourceRoot": "src"
    }
  },
  "monorepo": true
}
